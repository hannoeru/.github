{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with hannoeru's repos",
  "extends": [
    "group:allNonMajor",
    "config:base",
    "schedule:weekly",
    ":semanticCommits",
    ":rebaseStalePrs",
    "docker:enableMajor"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 30,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchPackagePrefixes": ["react", "@types/react"],
      "groupName": "react"
    },
    {
      "matchPackagePatterns": ["^@aws-sdk/", "^aws-cdk-"],
      "groupName": "aws"
    },
    {
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "@hannoeru/eslint-plugin",
        "@hannoeru/eslint-config"
      ],
      "groupName": "linters"
    },
    {
      "matchPackagePatterns": ["^@storybook/", "^storybook-"],
      "groupName": "storybook"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
