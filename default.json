{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with hannoeru's repos",
  "extends": [
    "group:allNonMajor",
    "config:base",
    ":maintainLockFilesWeekly",
    ":automergeTypes",
    ":semanticCommits",
    ":rebaseStalePrs",
    "docker:enableMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "automergeType": "branch",
  "configMigration": true,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "platformCommit": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 30,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
  },
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchPackagePrefixes": ["react", "@types/react"],
      "groupName": "react"
    },
    {
      "matchPackagePatterns": ["^@aws-sdk/", "^aws-cdk-"],
      "groupName": "aws"
    },
    {
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "@hannoeru/eslint-plugin",
        "@hannoeru/eslint-config"
      ],
      "groupName": "linters"
    },
    {
      "matchPackagePatterns": ["^@storybook/", "^storybook-"],
      "groupName": "storybook"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "automerge": true
    },
  ]
}
