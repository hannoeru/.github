{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with hannoeru's repos",
  "extends": [
    "group:allNonMajor",
    "config:base",
    "schedule:weekly",
    ":semanticCommits",
    ":rebaseStalePrs",
    ":maintainLockFilesWeekly",
    "docker:enableMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "extends": "packages:linters",
      "matchPackageNames": ["@hannoeru/eslint-plugin", "@hannoeru/eslint-config"],
      "groupName": "linters"
    },
    {
      "matchPackagePatterns": ["^@storybook/"],
      "groupName": "storybook"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "automerge": true
    }
  ]
}
